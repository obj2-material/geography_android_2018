<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="controller" type="ar.edu.unq.cpi.geographydata.view.MenuInicialController"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/unItemPorFila"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> controller.listaAniosUnTexto()}"
            android:text="@string/unItemPorFila"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/dosTextosPorFila"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> controller.listaAniosDosTextos()}"
            android:text="@string/dosTextosPorFila"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/unItemPorFila" />

        <Button
            android:id="@+id/imagenMasTextos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> controller.imagenMasTextos()}"
            android:text="@string/imagenMasTextos"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dosTextosPorFila" />

    </android.support.constraint.ConstraintLayout>
</layout>